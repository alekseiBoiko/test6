    var newsItems = [
        {itemNumber: '1', itemTitle : 'Banff National Park', itemText: 'Banff National Park lies in the heart of the majestic Rocky Mountains in the province of Alberta, and showcases some of Canada`s most beautiful scenery. Turquoise colored lakes, snow-capped peaks, and glaciers are all easily accessible ', user: '@thomasalva_adison'},
